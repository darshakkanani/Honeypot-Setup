# HoneyPort Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///honeyport.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=honeyport
DATABASE_USER=honeyport_user
DATABASE_PASSWORD=your_secure_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-32-byte-encryption-key

# Blockchain Configuration
BLOCKCHAIN_ENABLED=true
WEB3_PROVIDER_URL=http://localhost:8545
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key
SMART_CONTRACT_ADDRESS=

# AI Configuration
AI_ENABLED=true
AI_MODELS_PATH=./models
CONTINUOUS_LEARNING=true
GEOIP_DATABASE_PATH=./data/GeoLite2-City.mmdb

# Alert Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=security@yourcompany.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts

# Honeypot Configuration
HONEYPOT_HOST=0.0.0.0
HONEYPOT_PORTS=22,80,443,21,23,25,53,110,143,993,995
HONEYPOT_SSH_PORT=2222
HONEYPOT_HTTP_PORT=8080
HONEYPOT_HTTPS_PORT=8443

# Dashboard Configuration
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=false

# Attacker Site Configuration
ATTACKER_SITE_HOST=0.0.0.0
ATTACKER_SITE_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/honeyport.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Development Configuration
DEBUG=false
TESTING=false
DEVELOPMENT=false
